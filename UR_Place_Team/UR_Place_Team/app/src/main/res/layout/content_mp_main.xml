<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Marketplace.MarketplaceMainActivity"
    tools:showIn="@layout/activity_mp_main">


    <Button
        android:id="@+id/bt_mp_create_offer"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="13dp"
        android:text="@string/angebot_erstellen"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/bt_mp_show_offers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_mp_favorites" />

    <Button
        android:id="@+id/bt_mp_favorites"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="57dp"
        android:text="@string/favoriten"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/bt_mp_create_offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_mp_search_offers" />

    <Button
        android:id="@+id/bt_mp_show_offers"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="75dp"
        android:text="@string/eigene_angebote_sehen"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_mp_create_offer" />

    <Button
        android:id="@+id/bt_mp_search_offers"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="13dp"
        android:text="@string/angebote_durchsuchen"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/bt_mp_favorites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_Mp_Start_Mp" />

    <TextView
        android:id="@+id/tV_Mp_Start_Mp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="55dp"
        android:text="@string/marketplace"
        android:textAllCaps="false"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_mp_search_offers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>